<div class="posts-index-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-1 col-md-10">
        <div class="post-parts">
        <% @post.pictures.each do |picture| %>
        <%= image_tag picture.image.url if picture.image? %>
        <%= video_tag picture.video.url, width: "90%", height: "90%", 
                  controls: true, autobuffer: true if picture.video? %>
        <% end %>
        <p class="text"><%= simple_format(@post.text) %></p>
        <ul class="public">
          <li><%= link_to comments_path(post_id: @post.id) do %>
            <%= image_tag "comment.png", class:"icon" %>
            <% end %>
            </li>
            <% if !@post.favorite_users.include?(current_user) %>
            <li><%= link_to favorites_path(post_id: @post.id), method: :post do %>
            <%= image_tag "heart-black.png", class:"icon" %>
            <% end %>
            </li>
            <% else %>
            <li><%= link_to favorites_path(post_id: @post.id), method: :delete do %>
            <%= image_tag "heart-red.png", class:"icon" %>
            <% end %>
            </li>
            <% end %>
        </ul>
       <% if logged_in? && @post.user_id == current_user.id %>
       <ul class="user-only">
         <li><%= link_to "編集", "#", class:"btn" %></li>
         <li><%= link_to "削除", "#", class:"btn" %></li>
       </ul>
       <% end %>
       <div class="comment">
         <h1>コメント</h1>
         <% @post.comments.each do |comment| %>
         <%= comment.user.name %>
         <%= comment.text %>
         <% end %>
       </div>
       </div>
      </div>
    </div>
  </div>
</div>